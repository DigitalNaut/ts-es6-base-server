{
  "name": "server-test",
  "version": "0.0.0",
  "private": true,
  "main": "dist/app.ts",
  "scripts": {
    "start": "set NODE_ENV=development && npm-run-all build serve",
    "production": "set NODE_ENV=production && npm-run-all build serve",
    "watch": "nodemon",
    "build": "npm-run-all clean transpile",
    "clean": "rimraf dist",
    "transpile": "babel server --out-dir dist --extensions .ts,.tsx",
    "serve": "node ./dist/bin/www",
    "test": "jest",
    "tsc": "tsc"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/http-server": "^0.12.1",
    "@types/morgan": "^1.9.3",
    "jest": "^27.3.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb-base": "^0.3.0",
    "typescript": "^4.5.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
